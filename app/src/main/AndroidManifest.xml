            android:name="com.google.android.gms.ads.APPLICATION_ID"
            android:value="ca-app-pub-7948568042684832~9832315615" />

        <activity android:name=".ui.NewRecipeActivity" />
        <activity android:name=".ui.RecipeActivity" />
        <activity android:name=".ui.UpdatePasswordActivity" />
        <activity android:name=".ui.UpdateProfileActivity" />
        <activity android:name=".ui.RegisterActivity" />
        <activity android:name=".ui.ProfileActivity" />
        <activity android:name=".ui.SplashActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".ui.MainActivity" />
    </application>

</manifest>